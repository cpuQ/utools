{
	"schemaVersion": 1,
	"id": "utools",
	"version": "${version}",
	"name": "UTools",
	"description": "Simple tools for the survival experience. This should act as an replacement to having tens of mods for things like Fullbright, Zoom etc.",
	"authors": [
		"Lugo_Sieben"
	],
	"contact": {
		"homepage": "https://modrinth.com/mod/utools",
		"issues": "https://github.com/lugosieben/utools/issues",
		"sources": "https://github.com/lugosieben/utools"
	},
	"license": "CC BY-NC 4.0",
	"icon": "assets/utools/icon.png",
	"environment": "client",
	"entrypoints": {
		"main": [
			"net.lugo.utools.UTools"
		],
		"modmenu": [
			"net.lugo.utools.config.ModMenuIntegration"
		]
	},
	"mixins": [
		"utools.mixins.json"
	],
	"depends": {
		"fabricloader": ">=${loader_version}",
		"minecraft": "${minecraft_version}",
		"java": ">=${java_version}",
		"fabric-api": ">=${fabric_version}",
		"cloth-config": ">=${cloth_version}"

	},
	"suggests": {
		"modmenu": ">=${modmenu_version}"
	}
}